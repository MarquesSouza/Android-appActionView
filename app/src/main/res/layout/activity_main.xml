<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marquesdesouza.appactionview.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="24dp"
            android:id="@+id/edt_sms"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btn_gps"
            android:layout_weight="0.26" />

        <Button
            android:text="SMS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="17dp"
            android:id="@+id/btn_sms"
            android:layout_alignTop="@+id/edt_sms"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.65" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/btn_gps"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:id="@+id/edt_site"
            android:layout_toStartOf="@+id/btn_site"
            android:layout_weight="1" />

        <Button
            android:text="SITE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/edt_site"
            android:layout_alignStart="@+id/btn_gps"
            android:id="@+id/btn_site"
            android:layout_weight="1.11" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_gps"
            android:layout_below="@+id/btn_sms"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btn_gps" />

        <Button
            android:text="GPS"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:layout_below="@+id/btn_sms"
            android:layout_alignStart="@+id/btn_sms"
            android:id="@+id/btn_gps"
            android:layout_weight="0.75" />
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_GPS2" />

</LinearLayout>
